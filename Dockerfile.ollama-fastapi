FROM python:3.11-slim

# Set working directory
WORKDIR /workspace

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements-ollama-fastapi.txt .
RUN pip install --no-cache-dir -r requirements-ollama-fastapi.txt

# Copy the FastAPI service
COPY ollama_fastapi_service.py .

# Create a non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /workspace
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start the FastAPI service
CMD ["python", "ollama_fastapi_service.py"] 