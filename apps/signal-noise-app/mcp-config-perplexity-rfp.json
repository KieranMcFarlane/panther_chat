{
  "mcpServers": {
    "neo4j-mcp": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-neo4j"],
      "env": {
        "NEO4J_URI": "${NEO4J_URI}",
        "NEO4J_USERNAME": "${NEO4J_USERNAME}",
        "NEO4J_PASSWORD": "${NEO4J_PASSWORD}",
        "NEO4J_DATABASE": "${NEO4J_DATABASE:neo4j}"
      }
    },
    "falkordb-mcp": {
      "command": "python3",
      "args": ["backend/falkordb_mcp_server_fastmcp.py"],
      "env": {
        "FALKORDB_URI": "${FALKORDB_URI}",
        "FALKORDB_USER": "${FALKORDB_USER}",
        "FALKORDB_PASSWORD": "${FALKORDB_PASSWORD}",
        "FALKORDB_DATABASE": "${FALKORDB_DATABASE:sports_intelligence}"
      }
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-supabase"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}"
      }
    },
    "perplexity-mcp": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-perplexity"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "brightData": {
      "command": "node",
      "args": ["scripts/brightdata-mcp-server.js"],
      "env": {
        "API_TOKEN": "${BRIGHTDATA_API_TOKEN}",
        "PRO_MODE": "${BRIGHTDATA_PRO_MODE:false}"
      }
    },
    "graphiti": {
      "command": "python3",
      "args": ["backend/graphiti_mcp_server_official/src/graphiti_mcp_server.py"],
      "env": {
        "DATABASE_PROVIDER": "falkordb",
        "FALKORDB_URI": "${FALKORDB_URI}",
        "FALKORDB_USER": "${FALKORDB_USER}",
        "FALKORDB_PASSWORD": "${FALKORDB_PASSWORD}",
        "FALKORDB_DATABASE": "${FALKORDB_DATABASE:sports_intelligence}",
        "MODEL_NAME": "gpt-4o-mini",
        "EMBEDDING_MODEL": "text-embedding-3-small",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      }
    },
    "temporal-intelligence": {
      "command": "python3",
      "args": ["backend/temporal_mcp_server.py"],
      "env": {
        "FASTAPI_URL": "${FASTAPI_URL:http://localhost:8000}",
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}"
      }
    }
  },
  "_comment": "Complete MCP configuration for Perplexity-first RFP detection system"
}