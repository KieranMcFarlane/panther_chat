# Claude Agent SDK Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic

# Supabase Database Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Neo4j Knowledge Graph Configuration
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# MCP Tools Configuration
BRIGHTDATA_API_TOKEN=your-brightdata-token-here
PERPLEXITY_API_KEY=your-perplexity-key-here

# AWS S3 Configuration (Badge Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name-here

# Email Service Configuration
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_EMAIL=noreply@your-domain.com

# Authentication & Security
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
BRIGHTDATA_WEBHOOK_SECRET=generate-with-openssl-rand-base64-32

# Autonomous System Configuration
AUTONOMOUS_MODE_ENABLED=true
LEARNING_ENABLED=true
OUTREACH_ENABLED=true
MONITORING_ENABLED=true

# RFP Intelligence Configuration
RFP_MONITORING_SCHEDULE=*/5 * * * *
RFP_ANALYSIS_MODEL=claude-3-sonnet-20240229
RFP_RESPONSE_TIME_LIMIT=1800000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rfp_autonomous

# Cache Configuration
REDIS_URL=redis://localhost:6379

# Performance Configuration
ENABLE_ANALYTICS=true
LOG_LEVEL=info
MAX_CONCURRENT_AGENTS=5

# Development/Debugging (disable in production)
DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true