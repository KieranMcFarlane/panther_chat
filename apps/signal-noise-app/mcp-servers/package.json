{
  "name": "signal-noise-mcp-servers",
  "version": "1.0.0",
  "description": "MCP Servers for Yellow Panther Signal Noise App",
  "main": "index.js",
  "scripts": {
    "start:neo4j": "node src/mcp-servers/neo4j-server.js",
    "start:brightdata": "node src/mcp-servers/brightdata-server.js", 
    "start:perplexity": "node src/mcp-servers/perplexity-server.js",
    "start:all": "concurrently \"npm run start:neo4j\" \"npm run start:brightdata\" \"npm run start:perplexity\"",
    "dev": "concurrently \"nodemon src/mcp-servers/neo4j-server.js\" \"nodemon src/mcp-servers/brightdata-server.js\" \"nodemon src/mcp-servers/perplexity-server.js\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "neo4j-driver": "^5.15.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0"
  }
}