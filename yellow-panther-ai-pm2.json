{
  "apps": [
    {
      "name": "yellow-panther-ai",
      "script": "npm",
      "args": "run dev -- -p 3217 -H 0.0.0.0",
      "cwd": "/opt/yellow-panther-ai",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3217",
        "HOSTNAME": "0.0.0.0"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "3217",
        "HOSTNAME": "0.0.0.0"
      },
      "error_file": "/opt/yellow-panther-ai/logs/err.log",
      "out_file": "/opt/yellow-panther-ai/logs/out.log",
      "log_file": "/opt/yellow-panther-ai/logs/combined.log",
      "time": true,
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "watch": false,
      "ignore_watch": ["node_modules", "logs", ".next"],
      "autorestart": true,
      "exp_backoff_restart_delay": 100
    }
  ]
} 